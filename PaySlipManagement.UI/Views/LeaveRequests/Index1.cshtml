@model List<LeaveRequestsViewModel>

@{
    ViewData["Title"] = "Leave Requests";
}
<style>
    .custom-select {
        width: 250px;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    .bg-light-orange {
        background-color: #FF6F00 !important; /* Light Orange Color */
        color: white; /* Optional: Text color */
    }

    .form-inline .form-group {
        display: flex;
        align-items: center;
    }

        .form-inline .form-group label {
            margin-right: 10px;
        }
</style>
<div class="card mt-4 shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">List of Leave Requests</h4>
        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("GeneratePdf", "Employee", new { tab = "ApplyLeave" })'">
            Back to Apply Leave
        </button>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Employee Code</th>
                    <th>Leave Type</th>
                    <th>Reason</th>
                    <th>From Date</th>
                    <th>To Date</th>
                    <th>Leaves Count</th>
                    <th>Approval Person</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.Id</td>
                            <td>@request.Emp_Code</td>
                            <td>@request.LeaveType</td>
                            <td>@request.Reason</td>
                            <td>@request.FromDate?.ToString("dd/MM/yyyy")</td>
                            <td>@request.ToDate?.ToString("dd/MM/yyyy")</td>
                            <td>@request.LeavesCount</td>
                            <td>@request.ApprovalPerson</td>
                            <td>@request.Status</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No leave requests available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

