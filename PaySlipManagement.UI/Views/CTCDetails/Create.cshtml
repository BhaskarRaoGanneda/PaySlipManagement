@model CTCDetailsViewModel
@{

}
<h1 class="form-heading">Insert CTC Details</h1>
<hr class="custom-hr" />

<div class="container form-container" style="max-width: 1200px; border-radius: 8px; height: 600px; overflow-y: auto; margin: 20px auto; padding: 20px;">
    <form asp-action="Create">
        <!-- Row 1 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Emp_Code" class="form-label"></label>
                    <input asp-for="Emp_Code" class="form-control input-field" placeholder="Enter Employee Code" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EarnedBasic" class="form-label"></label>
                    <input asp-for="EarnedBasic" class="form-control input-field" placeholder="Enter Earned Basic" />
                </div>
            </div>
        </div>

        <!-- Row 2 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="HRA" class="form-label"></label>
                    <input asp-for="HRA" class="form-control input-field" placeholder="Enter HRA" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SpecialAllowance" class="form-label"></label>
                    <input asp-for="SpecialAllowance" class="form-control input-field" placeholder="Enter Special Allowance" />
                </div>
            </div>
        </div>

        <!-- Row 3 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PFEmployeeShare" class="form-label"></label>
                    <input asp-for="PFEmployeeShare" class="form-control input-field" placeholder="Enter PF Employee Share" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProfessionalTax" class="form-label"></label>
                    <input asp-for="ProfessionalTax" class="form-control input-field" placeholder="Enter Professional Tax" />
                </div>
            </div>
        </div>

        <!-- Row 4 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TDS" class="form-label"></label>
                    <input asp-for="TDS" class="form-control input-field" placeholder="Enter TDS" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AnnualCTC" class="form-label"></label>
                    <input asp-for="AnnualCTC" class="form-control input-field" placeholder="Enter Annual CTC" />
                </div>
            </div>
        </div>

        <!-- Row 5 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CTCMonth" class="form-label"></label>
                    <input asp-for="CTCMonth" class="form-control input-field" placeholder="Enter CTC Month" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PFEmployerShare" class="form-label"></label>
                    <input asp-for="PFEmployerShare" class="form-control input-field" placeholder="Enter PF Employer Share" />
                </div>
            </div>
        </div>

        <!-- Row 6 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PFEmployerShareAnnual" class="form-label"></label>
                    <input asp-for="PFEmployerShareAnnual" class="form-control input-field" placeholder="Enter PF Employer Share Annual" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AnnualGrossPay" class="form-label"></label>
                    <input asp-for="AnnualGrossPay" class="form-control input-field" placeholder="Enter Annual Gross Pay" />
                </div>
            </div>
        </div>

        <!-- Row 7 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MonthGrossPay" class="form-label"></label>
                    <input asp-for="MonthGrossPay" class="form-control input-field" placeholder="Enter Month Gross Pay" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OtherAdditions" class="form-label"></label>
                    <input asp-for="OtherAdditions" class="form-control input-field" placeholder="Enter Other Additions" />
                </div>
            </div>
        </div>

        <!-- Row 8 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OtherDeductions" class="form-label"></label>
                    <input asp-for="OtherDeductions" class="form-control input-field" placeholder="Enter Other Deductions" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TotalDeductions" class="form-label"></label>
                    <input asp-for="TotalDeductions" class="form-control input-field" placeholder="Enter Total Deductions" />
                </div>
            </div>
        </div>

        <!-- Row 9 -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NetPay" class="form-label"></label>
                    <input asp-for="NetPay" class="form-control input-field" placeholder="Enter Net Pay" />
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <hr class="custom-hr" />
        <div class="form-group mt-3">
            <div class="d-flex justify-content-between">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>


<style>
    .form-heading {
        font-size: 2rem;
        color: #5dcaff;
        font-weight: 600;
        text-align: center;
        margin-bottom: 10px;
    }

    .custom-hr {
        border: 0;
        height: 2px;
        background: #ffa726; /* Slight orange tint */
        margin: 20px auto;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: 500;
        color: #444;
    }

    .input-field {
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        width: 100%;
        transition: border-color 0.3s;
    }

        .input-field:focus {
            border-color: #5dcaff;
            outline: none;
            box-shadow: 0 0 4px rgba(93, 202, 255, 0.5);
        }

    .btn-primary {
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.3s;
    }

    .btn-outline-secondary {
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        border: 1px solid #ccc;
    }

        .btn-outline-secondary:hover {
            background-color: #e2e2e2;
        }
</style>

