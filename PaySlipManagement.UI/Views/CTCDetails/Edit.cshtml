@model CTCDetailsViewModel

<h1 class="form-heading">Edit Account Details</h1>
<hr class="custom-hr" />

<div class="container form-container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="TDS" class="form-label"></label>
            <input asp-for="TDS" class="form-control input-field" placeholder="Enter TDS" />
        </div>

        <div class="form-group">
            <label asp-for="AnnualCTC" class="form-label"></label>
            <input asp-for="AnnualCTC" class="form-control input-field" placeholder="Enter Annual CTC" />
        </div>

        <div class="form-group">
            <label asp-for="OtherAdditions" class="form-label"></label>
            <input asp-for="OtherAdditions" class="form-control input-field" placeholder="Enter Other Additions" />
        </div>

        <div class="form-group">
            <label asp-for="OtherDeductions" class="form-label"></label>
            <input asp-for="OtherDeductions" class="form-control input-field" placeholder="Enter Other Deductions" />
        </div>

        <div class="form-group">
            <label asp-for="TotalDeductions" class="form-label"></label>
            <input asp-for="TotalDeductions" class="form-control input-field" placeholder="Enter Total Deductions" />
        </div>

        <div class="form-group">
            <label asp-for="NetPay" class="form-label"></label>
            <input asp-for="NetPay" class="form-control input-field" placeholder="Enter Net Pay" />
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <div class="form-group mt-2">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .form-heading {
        font-size: 2rem;
        color: #5dcaff;
        font-weight: 600;
        text-align: center;
        margin-bottom: 10px;
    }

    .custom-hr {
        border: 0;
        height: 2px;
        background: #ffa726; /* Slight orange tint */
        margin: 20px auto;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: 500;
        color: #444;
    }

    .input-field {
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        width: 100%;
        transition: border-color 0.3s;
    }

    .input-field:focus {
        border-color: #5dcaff;
        outline: none;
        box-shadow: 0 0 4px rgba(93, 202, 255, 0.5);
    }

    .btn-primary {
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.3s;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #e2e2e2;
    }
</style>
