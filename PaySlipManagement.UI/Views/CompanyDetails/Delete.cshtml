@model CompanyDetailsViewModel

<h1>Delete Company Info</h1>

<h3>Are you sure you want to delete this company info?</h3>
<div>
    <h4>Company Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Company Name</dt>
        <dd class="col-sm-10">@Model.CompanyName</dd>

        <dt class="col-sm-2">Company Address</dt>
        <dd class="col-sm-10">@Model.CompanyAddress</dd>

        <dt class="col-sm-2">Division</dt>
        <dd class="col-sm-10">@Model.Division</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete Info</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>