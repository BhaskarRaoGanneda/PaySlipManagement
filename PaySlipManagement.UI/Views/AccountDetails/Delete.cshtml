@model PaySlipManagement.Common.Models.AccountDetails

<h1>Delete Account</h1>

<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>Account Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Employee Code</dt>
        <dd class="col-sm-10">@Model.Emp_Code</dd>

        <dt class="col-sm-2">Bank Name</dt>
        <dd class="col-sm-10">@Model.BankName</dd>

        <dt class="col-sm-2">Bank Account Number</dt>
        <dd class="col-sm-10">@Model.BankAccountNumber</dd>

        <dt class="col-sm-2">UAN Number</dt>
        <dd class="col-sm-10">@Model.UANNumber</dd>

        <dt class="col-sm-2">PF Account Number</dt>
        <dd class="col-sm-10">@Model.PFAccountNumber</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
