@model List<AccountDetailsViewModel>

<h1>Account Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Employee Code</th>
            <th>Bank Name</th>
            <th>Bank Account Number</th>
            <th>UAN Number</th>
            <th>PF Account Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.Emp_Code</td>
                <td>@account.BankName</td>
                <td>@account.BankAccountNumber</td>
                <td>@account.UANNumber</td>
                <td>@account.PFAccountNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@account.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@account.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@account.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New</a>