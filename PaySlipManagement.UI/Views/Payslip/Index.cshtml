@model IEnumerable<PaySlipManagement.UI.Models.PayslipDetailsViewModel>

@{
    ViewData["Title"] = "Payslip Index";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<style>
    .custom-select {
        width: 250px;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    .bg-light-orange {
        background-color: #FF8C00 !important; /* Light Orange Color */
        color: white; /* Optional: Text color */
    }

    .form-inline .form-group {
        display: flex;
        align-items: center;
    }

        .form-inline .form-group label {
            margin-right: 10px;
        }

    .section-heading {
        font-size: 1.8rem;
        color: #5dcaff; /* Subtle blue text for a clean look */
        font-weight: 500; /* Medium weight for simplicity */
        padding: 20px 0 10px; /* Adjusted padding for spacing */
        text-align: left; /* Left-aligned for professional appearance */
        letter-spacing: 0.5px; /* Slight spacing between letters for modern feel */
    }

    .btn-custom {
        border-radius: 8px; /* Rounded corners for buttons */
        padding: 6px 12px; /* Slightly increased padding */
        font-size: 0.9rem; /* Smaller font size */
        transition: background-color 0.3s; /* Smooth transition for background */
    }

        .btn-custom:hover {
            background-color: #FFA500; /* Darker shade on hover */
        }

    .styled-hr {
        border: none;
        border-bottom: 2px solid #ffa726; /* Subtle, thin orange underline */
        margin: 20px 0; /* Adjust margins to your liking */
        opacity: 0.7; /* Slight transparency for a softer look */
    }

    .table {
        border-radius: 10px; /* Rounded corners for table */
        overflow: hidden; /* Ensures rounded corners are applied */
    }

        .table thead th {
            background-color: #FF8C00; /* Light Orange Color */
            color: white; /* Text color for headers */
            padding: 12px;
            text-align: center;
            font-weight: 600; /* Bold for emphasis */
        }

        .table tbody td {
            padding: 10px;
            vertical-align: middle; /* Center align content vertically */
        }

        .table tbody tr:nth-child(even) {
            background-color: #f8f9fa; /* Light gray background for even rows */
        }

        .table tbody tr:hover {
            background-color: #f1f1f1; /* Slightly darker background on hover */
        }

    .action-buttons {
        display: flex;
        justify-content: space-around; /* Evenly distribute buttons */
    }

        .action-buttons a {
            margin: 0 5px; /* Space between buttons */
        }
</style>

<div class="mt-2">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3 class="section-heading">Payslip Details</h3>
        </div>
        <div>
            <a asp-action="UploadPayslip" class="btn btn-primary btn-custom">Upload New Payslip</a>
        </div>
    </div>
</div>
<hr class="styled-hr" />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Employee Code</th>
            <th>Pay Slip For Month</th>
            <th>Days Paid</th>
            <th>Absent Days</th>
            <th>Earned Basic</th>
            <th>HRA</th>
            <th>Special Allowance</th>
            <th>PF Employee Share</th>
            <th>Professional Tax</th>
            <th>TDS</th>
            <th>Earning Total</th>
            <th>Total Deductions</th>
            <th>Net Pay</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Emp_Code</td>
                <td>@item.PaySlipForMonth</td>
                <td>@item.DaysPaid</td>
                <td>@item.AbsentDays</td>
                <td>@item.EarnedBasic</td>
                <td>@item.HRA</td>
                <td>@item.SpecialAllowance</td>
                <td>@item.PFEmployeeShare</td>
                <td>@item.ProfessionalTax</td>
                <td>@item.TDS</td>
                <td>@item.EarningTotal</td>
                <td>@item.TotalDeductions</td>
                <td>@item.NetPay</td>
                <td class="action-buttons">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

