@model RolesViewModel

@{
    ViewData["Title"] = "Create";
}
<h1 class="form-heading">Create New Role</h1>

<hr class="custom-hr" />

<div class="container form-container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Role" class="form-label"></label>
                    <input asp-for="Role" class="form-control input-field" />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 button-group">
        <button type="submit" class="btn btn-primary btn-custom">Create</button>
        <a asp-action="Index" class="btn btn-secondary btn-custom">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Form Heading */
    .form-heading {
        font-size: 1.8rem;
        color: #5dcaff; /* Subtle blue for a modern touch */
        font-weight: 500;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Custom Horizontal Line */
    .custom-hr {
        border: 0;
        height: 2px;
        background: #ffa726; /* Slight orange tint */
        margin-bottom: 20px;
    }

    /* Form Container */
    .form-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9; /* Light background for clean look */
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Labels */
    .form-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #444;
        margin-bottom: 5px;
    }

    /* Input Fields */
    .input-field {
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        width: 100%;
        transition: border-color 0.3s;
    }

        .input-field:focus {
            border-color: #5dcaff;
            outline: none;
            box-shadow: 0 0 4px rgba(93, 202, 255, 0.5);
        }

    /* Button Group */
    .button-group {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
    }

    /* Buttons */
    .btn-custom {
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #007bff;
            color: #fff;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>