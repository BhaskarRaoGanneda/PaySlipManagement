@model LeavesViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h2 class="text-center text-danger mb-4">Delete Employee</h2>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.Emp_Code)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Emp_Code)
                        </dd>

                        <dt class="col-sm-4 fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.TypeId)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TypeId)
                        </dd>

                        <dt class="col-sm-4 fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.TotalLeaves)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TotalLeaves)
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.LeavesAvailable)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.LeavesAvailable)
                        </dd>

                        <dt class="col-sm-4 fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.LeavesUsed)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.LeavesUsed)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>