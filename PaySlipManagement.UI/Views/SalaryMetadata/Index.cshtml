@model IEnumerable<PaySlipManagement.Common.Models.SalaryMetadata>

@{
    ViewData["Title"] = "Salary Details";
}
<style>
    .custom-select {
        width: 250px;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    .bg-light-orange {
        background-color: #FF8C00 !important; /* Light Orange Color */
        color: white; /* Optional: Text color */
    }

    .form-inline .form-group {
        display: flex;
        align-items: center;
    }

        .form-inline .form-group label {
            margin-right: 10px;
        }
</style>
<div class="mt-2">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3>Salary Details</h3>
            <p>List of Salary Details</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr class="bg-light-orange">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaySlipForMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysPaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbsentDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EarnedBasic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HRA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PFEmployeeShare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessionalTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TDS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EarningTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDeductions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualCTC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CTCMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PFEmployerShare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PFEmployerShareAnnual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualGrossPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthGrossPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherAdditions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherDeductions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LossOfPay)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaySlipForMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbsentDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EarnedBasic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HRA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialAllowance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PFEmployeeShare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessionalTax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TDS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EarningTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDeductions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetPay)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.AnnualCTC)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CTCMonth)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.PFEmployerShare)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.PFEmployerShareAnnual)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.AnnualGrossPay)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.MonthGrossPay)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.OtherAdditions)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.OtherDeductions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LossOfPay)
            </td>
            <td>
                <div class="d-flex justify-content-md-evenly">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mr-2">
                        <i class="bi bi-pencil-square"></i>
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mr-2">
                        <i class="bi bi-info-circle"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mr-2">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
